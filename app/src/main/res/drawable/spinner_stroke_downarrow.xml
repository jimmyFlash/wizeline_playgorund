<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:left="@dimen/hairline_stroke" android:right="@dimen/hairline_stroke">
                <shape >
<!--                    <gradient android:angle="270" android:endColor="#ccc" android:startColor="#fff" android:type="linear" />-->
                    <solid android:color="@android:color/transparent"/>
                    <corners android:radius="@dimen/corner_rad_min" />

                </shape>
            </item>
            <item  android:right="@dimen/min_mar_pad"  android:left="@dimen/min_mar_pad">
                <bitmap android:antialias="true"
                    android:gravity="end"
                    android:src="@android:drawable/arrow_down_float"
                    android:tint="@color/colorAccent"
                    />

            </item>
            <item>
                <shape >
                    <!--<gradient android:angle="90" android:endColor="#ccc" android:startColor="#999" android:type="linear" />-->

                    <stroke android:width="@dimen/hairline_stroke" android:color="@color/colorAccent" />

                    <corners android:radius="@dimen/corner_rad_min" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="@dimen/standard_offset_1" android:top="3dp" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>

